{
  "name": "seedledger",
  "version": "0.0.0",
  "description": "Personal financial app",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "concurrently --names \"Contracts,Transactions,Web\" --prefix-colors \"magenta,cyan,green\" \"npm run watch -w packages/contracts\" \"npm run dev -w services/transactions\" \"npm run dev -w apps/web\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix -w apps/web",
      "npm run prettier:fix -w apps/web"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "fastify-cli": "^7.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "workspaces": [
    "apps/web",
    "packages/contracts",
    "services/transactions"
  ]
}
