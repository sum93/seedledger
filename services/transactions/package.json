{
  "type": "module",
  "name": "transactions",
  "version": "0.0.0",
  "description": "Transactions service for SeedLedger",
  "main": "server.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts",

    "x:test": "npm run build:ts && tsc -p test/tsconfig.json && FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --test --experimental-test-coverage --loader ts-node/esm test/**/*.ts",
    "x:start": "npm run build:ts && fastify start -l info dist/app.js",
    "x:build:ts": "tsc",
    "x:watch:ts": "tsc --watch",
    "x:dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "contracts": "*",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.8",
    "c8": "^10.1.2",
    "drizzle-kit": "^0.31.8",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.4.0",
    "typescript": "~5.9.2"
  }
}
