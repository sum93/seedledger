{
  "type": "module",
  "name": "transactions",
  "version": "0.0.0",
  "description": "Transactions service for SeedLedger",
  "main": "server.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "db:seed": "tsx db/seed.ts",
    "db:reset": "tsx db/reset.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts",
    "test": "vitest",
    "db:migrate:test": "VITEST=true drizzle-kit migrate --config ./drizzle.config.ts",
    "db:studio:test": "VITEST=true drizzle-kit studio --config ./drizzle.config.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "x:start": "npm run build:ts && fastify start -l info dist/app.js",
    "x:build:ts": "tsc",
    "x:watch:ts": "tsc --watch",
    "x:dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/sensible": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "contracts": "*",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.8",
    "c8": "^10.1.2",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fastify-tsconfig": "^3.0.0",
    "globals": "^14.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "ts-node": "^10.4.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  }
}
